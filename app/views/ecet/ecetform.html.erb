 <div class="content-page">
  <!-- Start content -->
  <div class="content">
   <div class="container">
    <!-- Page-Title -->
    <div class="row">
      <div class="col-sm-12">
        <h4 class="page-title">Add Ecet Questions</h4>
        <ol class="breadcrumb">
          <li><b><a href="/">Home</a></b></li>
          <li><b><a href="/ecet">Ecet</a></b></li>
          <li class="active">Add Questions</li>
        </ol>
        <% if notice %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </div>
        <% end %>
        <% if alert %>
        <div class="alert alert-danger alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= alert %>
        </div>
        <% end %>
      </div>
    </div>
  </div>  


<div class="container">
<div class="row">
<br>
  <% @cets = Cet.all%>
 

                      <%= simple_form_for @ecet, url: {:action => "addecet",  :method => "post"} do |f| %>
                    
                    <div class="row">
                    <div class="col-sm-8">
                      <div class="col-sm-6">
                          <%= f.hidden_field :cet, :value => "ecet" %><h2> <b>ECET FORM</b></h2>
                       </div>
                    <div class="col-sm-6">
                       <%= f.input :subject, :required => true, :collection => ['Mathematics','Physics','Chemistry','Civil', 'Electrical & Electronics', 'Mechanical', 'Electronics & Communication', 'Computer Science and Engineering'], :label => false, :input_html => {:style => "width:100%;", :class => "form-control"}, :prompt => "Select Subject" %><br>
                    </div>
                    </div>
                    <div class="col-sm-4">
                        <%= f.file_field :qimage %>
                    </div>
                    </div>
                   
                      <%= f.input :question, :required => true, :placeholder => "Add Question", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %><br>

                      <div class="row">
                      <!-- <div class="col-sm-8"> -->
                      <div class="col-sm-4">
                      <%= f.input :a, :required => true, :placeholder => "option A", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                      <%= f.input :b, :required => true, :placeholder => "option B", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                        </div>
                        <div class="col-sm-4">
                      <%= f.input :c, :required => true, :placeholder => "option C", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                      <%= f.input :d, :required => true, :placeholder => "option D", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                      </div>
                        <div class="col-sm-4">
                      <%= f.input :t, :placeholder => "True Answer", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                       <%= f.input :tc, :placeholder => "Test Count", :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                       </div>
                    </div>
                    <hr><hr>
                    <div class="row">

                     <div class="col-sm-2">
                          <%= f.input :comman, :required => true, :collection => ["no","yes"], :label => false, :input_html => {:style => "width:100%;", :class => "form-control"} %>
                      </div>
                    <div class="col-sm-2">
                   <%= f.input :optiona, as: :file, :label => false %>
                   </div>
                    <div class="col-sm-2">
                    <%= f.input :optionb, as: :file, :label => false %>
                    </div>
                     <div class="col-sm-2">
                    <%= f.input :optionc, as: :file, :label => false %>
                    </div>
                     <div class="col-sm-2">
                    <%= f.input :optiond, as: :file, :label => false %>
                    </div>
                    </div>
                    <div class="text-center">
                     <%= f.submit "submit", :class => "btn btn-primary" %>
                     </div>
                      <% end %>
  </div><br>

            <div class="container">

                    <%= simple_form_for @ecetcompleted, url: {:action => "ecetcompleted",  :method => "post"} do |f| %>
                    <%= f.hidden_field :cet, :value => "ecet" %>
                     
