<style type="text/css">
	table {
    table-layout: fixed;
    word-wrap: break-word;
}
</style>
<% i = 1 %>
<% j = 0 %>
<div class="container">
			<div class="row text-center">
					  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
			              <!-- school9edu_main_Blog1_1x1_as -->
			              <ins class="adsbygoogle"
			                   style="display:block"
			                   data-ad-client="ca-pub-7665698555914778"
			                   data-ad-slot="9074553645"
			                   data-ad-format="auto"></ins>
			              <script>
			              (adsbygoogle = window.adsbygoogle || []).push({});
			              </script>

			 </div>
	<table class="table table-bordered">
		<tr class="text-center">
			<th>Question</th>
			<th>Your Answer</th>
			<th>True Answer</th>
		</tr>
		<% ad=@ecetresults.count/3 %>
		<% ad2=@ecetresults.count/3 %>
			<% @ecetresults.each do |r| %>
			
			<% @question = Ecet.find_by_id(r.question) %>
				<% if r.answer == @question.t %>
					<% color = "lightgreen" %>
					<% j+= 1 %>
				<% else %>
					<% color ="#f27171" %>
				<% end %>
				
				<tr>
					<td ><%= @question.question %></td>
					<td style="background-color:<%= color%>"><%= r.answer %></td>
					<td><%= @question.t %></td>
				</tr>

				<% if i == ad %>
				<% ad+=ad2 %>
				<tr class="text-center">
				<td colspan="3">
					 <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
						<!-- Responsive Links -->
						<ins class="adsbygoogle"
						     style="display:block"
						     data-ad-client="ca-pub-7665698555914778"
						     data-ad-slot="8409268847"
						     data-ad-format="link"></ins>
						<script>
						(adsbygoogle = window.adsbygoogle || []).push({});
						</script>

                   </td> 
                   
                </tr>
                <% end %>


				<% i+=1 %>
			<% end %>
	</table>

	<div class="row text-center panel">
		<!-- <div class="col-md-6"> -->
		<b><p class="text-danger">Total Questions Attempt = <%= @ecetresults.count %></p>
		<p class="text-success">Your Correct Answer = <%= j %></p></b>
		<!-- </div> -->
	</div>

	<div class="row text-center">
		<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
		<!-- school9edu_main_Blog1_1x1_as -->
		<ins class="adsbygoogle"
		    style="display:block"
			data-ad-client="ca-pub-7665698555914778"
			data-ad-slot="9074553645"
			data-ad-format="auto"></ins>
			<script>
			   (adsbygoogle = window.adsbygoogle || []).push({});
			</script>

	</div>

</div>