 <div class="container">
          <% if notice %>
                  <div class="alert alert-success alert-dismissible" role="alert">
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <%= notice %>
                  </div>
                  <% end %>
                  <% if alert %>
                  <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <%= alert %>
                  </div>
                  <% end %>
       <div class="row text-center">
        
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                  <ins class='adsbygoogle' data-ad-client='ca-pub-7665698555914778' data-ad-slot='5852755247' style='display:inline-block;min-width:300px;max-width:1100px;width:100%;height:140px;'></ins>
               
                <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        
        </div>

<% @questions.each do |q| %>
  <div class="panel panel-default">
    <div class="panel-body"><p><%= q.question.html_safe %></p><br>
    <% if q.qimage? %>
    <div class="row">
    <div class="col-sm-8">
      <p class="text-center"><%= image_tag(q.qimage) %></p>
      </div>
      <div class="col-sm-4">
       <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- school9edu_main_Blog1_1x1_as -->
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-7665698555914778"
           data-ad-slot="9074553645"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>

    <% end %>
    </div>
  </div>
                
    <div class="panel panel-default">
          <div class="panel-body">
          <div class="row">     
          <div class="col-sm-3">
           <%= simple_form_for @submitque, :input_html => {:id => "form_id", :class => "form-horizontal"}, url: {action: "submitque", method: "post"} do |f| %> 
              <%= f.error_notification %>

               <%= f.hidden_field :question, :value => q.id %>
               <%= f.hidden_field :subject, :value => @subject %>
               <% if @questions.current_page == @questions.count %>
                <%= f.hidden_field :pag, :value => @questions.current_page %>
                <% else %>
                 <%= f.hidden_field :pag, :value => @questions.current_page+1 %>
                 <% end %>
                <%= f.hidden_field :tc, :value => q.tc %>
               
               <%= f.input :answer, as: :radio_buttons, :required => true, :label => false, collection: [q.a.html_safe,  q.b.html_safe, q.c.html_safe ,q.d.html_safe], wrapper: :vertical_radio_and_checkboxes %>
                <% disabled = Submitque.where(:userid => current_user, :question => q.id, :subject => @subject) %>
                   <% if disabled.empty? %>
                      <%= f.submit "submit", :class => "btn btn-primary"%>
                  <% else %>
                      <p class="btn btn-primary disabled"><abbr title="Already submitted">Answer Submitted</abbr></p>
                   <% end %>

              
           
           </div>
            <% end %>
           <div class="col-sm-5 text-center">
           <br>
                 <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Responsive Links -->
                    <ins class="adsbygoogle"
                         style="display:block"
                         data-ad-client="ca-pub-7665698555914778"
                         data-ad-slot="8409268847"
                         data-ad-format="link"></ins>
                    <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
              </div>
            <div class="col-sm-4 text-center"><br><br><br>
                <a href="/ecetresults/<%= q.tc %>/<%= @subject %>" > <button class="btn btn-danger">Finshed Exam</button></a>
            </div>
             </div>
  <% end %>
</div>
</div>

<div class="text-center flickr_pagination">
  <%= will_paginate @questions, :class => "flickr_pagination", :previous_label => "Previous", :next_label => 'Next', :page_links => true, renderer: BootstrapPagination::Rails %>
  </div>
