<div class="container-fluid">
<div style="min-height:150px; min-width:100%"></div>
<% if notice %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= notice %>
        </div>
        <% end %>
        <% if alert %>
        <div class="alert alert-warning alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= alert %>
        </div>
        <% end %>

	<div class="container">
	<div class="col-sm-4"></div>
	<div class="col-sm-8">


 
 <% @questions.each do |q| %>
<%= q.question%>
 <%= simple_form_for @submitque, :input_html => {:class => "form-horizontal"}, url: {action: "submitque", method: "post"} do |f| %> 
    <%= f.error_notification %>

     <%= f.hidden_field :question, :value => q.id %>
     <input name="question" type="hidden" value=0>
     <%= f.input :answer, as: :radio_buttons, :required => true, :label => false, collection: [q.a, q.b,q.c,q.d], wrapper: :vertical_radio_and_checkboxes %>
    <%= f.submit "submit", :class => "btn btn-primary" %>
  <% end %>


  <% end %>
  <%= will_paginate @questions , :page_links => false, renderer: BootstrapPagination::Rails %>
</div>
</div>
		</div>
 

</div>